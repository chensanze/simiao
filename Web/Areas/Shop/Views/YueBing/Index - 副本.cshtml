
@{
    ViewBag.Title = "建寺义卖";
}
@section styles{
    <link href="http://cdn.bootcss.com/animate.css/3.5.2/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/Content/Base/font/iconfont.css?@ShiMiao.Common.Constants.ResourceVersion" />
    <link href="~/Content/Shop/YueBing/css/index.css?@ShiMiao.Common.Constants.ResourceVersion" rel="stylesheet" />
<link href="~/Content/Shop/YueBing/css/weui.min.css?@ShiMiao.Common.Constants.ResourceVersion" rel="stylesheet" />
}
<div class="wrapper wrapper-index">
    <div class="wrapper-header">
        <img class="goods-image" src="/Content/Shop/YueBing/images/yb01.jpg" />
    </div>
    <div class="wrapper-body">
        <div>
            <span>月饼 价格:</span>
            <span>￥</span>
            <span>108元</span>
        </div>
        <form>
            <div>
                <input type="hidden" name="goodsID" value="@ViewBag.goodsID" />
            </div>
            <table class="table-body">
                <tr class="table-tr"><td class="table-td-letf"><span>数量:</span></td><td class="table-td-right"><input type="number" style="width:95%"  name="Amount" value="1" class="form-control number"></td></tr>
                <tr class="table-tr"><td class="table-td-letf"><span>快递地区:</span></td class="table-td-letf"><td class="table-td-right"><input type="radio"  name="delivery" value="1" />省内6元
<input type="radio" name="delivery" value="2" />省外8元</td></tr>
                <tr class="table-tr"><td class="table-td-letf"><span>收货人:</span></td><td class="table-td-right"><input type="text" style="width:95%"   name="username" value="" /></td></tr>
                <tr class="table-tr"><td class="table-td-letf"><span>手机号码:</span></td><td class="table-td-right"><input type="text" style="width:95%"   name="userphone" value="" /></td></tr>
                <tr class="table-tr"><td class="table-td-letf"><span>详细地址:</span></td><td class="table-td-right"><textarea name="Address" style="width:95%;height:80px;" ></textarea></td></tr>
            </table>
            <div>
                @*<a class="btn-donation" href="javascript:;" data-callback="$.stone.saveOrder" data-mask="true" data-url="/Shop/YueBing/SaveOrder?oid=@ViewBag.EnOrgID" onclick="$.stone.submitForm(this)">
                        <img src="/Content/Shop/Goods2/images/renlin.png" />
                    </a>*@
                <input type="button" class="sbbutton"  data-callback="$.stone.saveOrder" data-mask="true" data-url="/Shop/YueBing/SaveOrder?oid=@ViewBag.EnOrgID" onclick="$.stone.submitForm(this)" value="提交" />
            </div>
        </form>
    </div>
    <div>
        @*<hr />
        <div>

            已下订单
        </div>*@
        <br /><div style="text-align:left;font-size:small;color:coral">*居士购买5盒及以上享受团购价，价格为88元。
快递费为数量乘选择的区域价格，总价为月饼金额+快递费用。</div><br /><br />
        <div class="user-list">
            <div class="js-scroller"
                 data-autoloadbottom="true"
                 data-url="/Shop/YueBing/GetOrderList?oid=@ViewBag.EnOrgID"
                 data-jstemplate="jsList"
                 data-message-none="快来订购吧">
            </div>
        </div>
    </div>
    <div class="wrapper-header">
        <img src="~/Content/Shop/YueBing/images/qrcode.jpg" />
    </div>
</div>
@section scripts{
    <script src="~/Content/Shop/YueBing/js/index.js?@ShiMiao.Common.Constants.ResourceVersion"></script>
    @Html.Partial("/Views/Shared/ThirdShared.cshtml")
    <script>
        $(function () {
            $.stone.initScroller();
            //$.stone.getRandom();
        });
    </script>
    <script type="text/html" id="jsList">
        {{each list as item i}}
        <div class="item">
            {{if item.HeaderImage != ""}}
            {{if item.IsAnonymous == "1"}}
            <img src="~/Content/Shop/YueBing/images/default-header.png" />
            {{else}}
            <img src="{{item.HeaderImage}}" />
            {{/if}}
            {{/if}}
            <div class="member">
                {{if item.IsAnonymous == "1"}}
                <div class="nickname">匿名</div>
                {{else}}
                <div class="nickname">{{item.NickName}}</div>
                {{/if}}
            </div>
            <div class="info">
                <div class="fee">{{item.Count}}盒</div>
            </div>
        </div>
        {{/each}}
    </script>
}